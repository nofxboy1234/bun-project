{
  "name": "bun-project",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "db:reset": "bun reset.ts",
    "db:push": "bunx drizzle-kit push --verbose",
    "db:seed": "bun seed2.ts",
    "db:erd:build": "bunx liam erd build --input src/db/schema.ts --format drizzle --output-dir erd",
    "db:studio": "bunx drizzle-kit studio --verbose",
    "db:erd:serve": "bunx --bun serve erd/",
    "db": "bun run db:reset && bun run db:push && bun run db:seed && bun run db:erd:build",
    "lint": "bunx --bun oxlint",
    "format": "FORCE_COLOR=1 bunx --bun prettier . --write",
    "ts": "bunx --bun tsc",
    "gen": "bunx --bun tsr generate",
    "watch": "bunx --bun tsr watch",
    "dev": "bun run watch & bun --hot src/index.ts",
    "dev2": "bun src/index.ts",
    "debug": "bun run watch & bun --inspect --hot src/index.ts",
    "start": "NODE_ENV=production bun src/index.ts",
    "build": "bun run gen && bun build --minify --sourcemap --env='BUN_PUBLIC_*' --production --target=bun ./src/index.ts --outdir=dist",
    "start:js": "NODE_ENV=production bun --cwd=dist index.js",
    "build:exe": "bun run gen && bun build --compile --minify --sourcemap --env='BUN_PUBLIC_*' --bytecode --production --target=bun ./src/index.ts --outfile bun-project",
    "clean": "rm -rf dist && rm -f bun-project && echo 'Done cleaning.'"
  },
  "dependencies": {
    "@elysiajs/eden": "^1.4.5",
    "@elysiajs/openapi": "^1.4.11",
    "@tanstack/react-query": "^5.90.10",
    "@tanstack/react-router": "^1.136.8",
    "@tanstack/router-cli": "^1.136.8",
    "drizzle-orm": "^0.44.7",
    "elysia": "^1.4.16",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@liam-hq/cli": "^0.7.23",
    "@types/bun": "^1.3.2",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "drizzle-kit": "^0.31.7",
    "oxlint": "^1.29.0",
    "pg": "^8.16.3",
    "prettier": "^3.6.2",
    "serve": "^14.2.5"
  }
}
