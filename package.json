{
  "name": "bun-react-template",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "bunx eslint .",
    "format": "bunx prettier . --write",
    "ts": "bunx tsc",
    "dev": "bun --hot src/index.tsx",
    "build": "bun build --minify --sourcemap --env='BUN_PUBLIC_*' --production --target=bun ./src/index.tsx --outdir=dist",
    "build-exe": "bun build --compile --minify --sourcemap --env='BUN_PUBLIC_*' --bytecode --production --target=bun ./src/index.tsx --outfile myapp",
    "start": "NODE_ENV=production bun src/index.tsx",
    "start:js": "NODE_ENV=production bun --cwd=dist index.js",
    "clean": "rm -rf dist && rm -f myapp && echo 'Done cleaning.'"
  },
  "dependencies": {
    "react": "^19",
    "react-dom": "^19"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "jiti": "^2.5.1",
    "prettier": "3.6.2",
    "typescript-eslint": "^8.42.0"
  }
}
