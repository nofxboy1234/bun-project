{
  "name": "bun-project",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "db:reset": "bun src/db/reset.ts",
    "db:push": "bunx drizzle-kit push --verbose",
    "db:seed": "bun src/db/seed.ts",
    "db:erd:build": "bunx liam erd build --input src/db/schema.ts --format drizzle --output-dir erd",
    "db:studio": "bunx drizzle-kit studio --verbose",
    "db:erd:serve": "bunx --bun serve erd/",
    "db": "bun run db:reset && bun run db:push && bun run db:seed && bun run db:erd:build",
    "lint": "bunx --bun oxlint",
    "format": "FORCE_COLOR=1 bunx --bun prettier . --write",
    "ts": "bunx --bun tsc",
    "gen": "bunx --bun tsr generate",
    "watch": "bunx --bun tsr watch",
    "dev": "bun run watch & bun --hot src/index.tsx",
    "dev:tss": "bun --bun vite dev --port 3000",
    "debug": "bun run watch & bun --inspect --hot src/index.tsx",
    "start": "NODE_ENV=production bun src/index.tsx",
    "build": "bun run gen && bun build --minify --sourcemap --env='BUN_PUBLIC_*' --production --target=bun ./src/index.tsx --outdir=dist",
    "build:tss": "bun --bun vite build",
    "start:tss": "NODE_ENV=production bun server.tsx",
    "start:js": "NODE_ENV=production bun --cwd=dist index.js",
    "start:js:tss": "bun --bun vite preview --port 3000",
    "build:exe": "bun run gen && bun build --compile --minify --sourcemap --env='BUN_PUBLIC_*' --bytecode --production --target=bun ./src/index.tsx --outfile bun-project",
    "clean": "rm -rf dist && rm -f bun-project && echo 'Done cleaning.'"
  },
  "dependencies": {
    "@elysiajs/eden": "^1.4.5",
    "@elysiajs/openapi": "^1.4.11",
    "@tanstack/react-devtools": "^0.8.2",
    "@tanstack/react-query": "^5.90.11",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@tanstack/react-router": "^1.139.6",
    "@tanstack/react-router-devtools": "^1.139.6",
    "@tanstack/react-router-ssr-query": "^1.139.6",
    "@tanstack/react-start": "^1.139.6",
    "@tanstack/router-cli": "^1.139.6",
    "@tanstack/router-plugin": "^1.139.6",
    "drizzle-kit": "^0.31.7",
    "drizzle-orm": "^0.44.7",
    "elysia": "^1.4.16",
    "pg": "^8.16.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@liam-hq/cli": "^0.7.24",
    "@tanstack/devtools-vite": "^0.3.11",
    "@types/bun": "^1.3.3",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "oxlint": "^1.30.0",
    "prettier": "^3.6.2",
    "serve": "^14.2.5",
    "vite": "^7.2.4"
  }
}
