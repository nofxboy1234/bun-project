{
  "name": "bun-project",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "db:reset": "bun src/db/reset.ts",
    "db:push": "bunx drizzle-kit push --verbose",
    "db:seed": "bun src/db/seed.ts",
    "db:erd:build": "bunx liam erd build --input src/db/schema.ts --format drizzle --output-dir erd",
    "db:studio": "bunx drizzle-kit studio --verbose",
    "db:erd:serve": "bunx --bun serve erd/",
    "db": "bun run db:reset && bun run db:push && bun run db:seed && bun run db:erd:build",
    "lint": "bunx --bun oxlint",
    "format": "FORCE_COLOR=1 bunx --bun prettier . --write",
    "ts": "bunx --bun tsc",
    "dev": "bun --bun vite dev --port 3000",
    "debug:dev": "bun --bun --inspect node_modules/.bin/vite dev --port 3000",
    "clean": "rm -rf dist && rm -f bun-project && echo 'Done cleaning.'",
    "build": "bun --bun vite build",
    "preview": "bun --bun vite preview --port 3000",
    "debug:preview": "bun --bun --inspect node_modules/.bin/vite preview --port 3000",
    "start": "NODE_ENV=production bun --bun server.tsx",
    "debug:start": "NODE_ENV=development bun --bun --inspect server.tsx"
  },
  "dependencies": {
    "@elysiajs/eden": "^1.4.5",
    "@elysiajs/openapi": "^1.4.11",
    "@tanstack/react-devtools": "^0.8.4",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-query-devtools": "^5.91.1",
    "@tanstack/react-router": "^1.140.0",
    "@tanstack/react-router-devtools": "^1.140.0",
    "@tanstack/react-router-ssr-query": "^1.140.0",
    "@tanstack/react-start": "^1.140.0",
    "@tanstack/router-plugin": "^1.140.0",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.0",
    "elysia": "^1.4.18",
    "pg": "^8.16.3",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@liam-hq/cli": "^0.7.24",
    "@tanstack/devtools-vite": "^0.3.12",
    "@types/bun": "^1.3.4",
    "@types/node": "^24.10.2",
    "@types/pg": "^8.15.6",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "oxlint": "^1.32.0",
    "prettier": "^3.7.4",
    "serve": "^14.2.5",
    "vite": "^7.2.7"
  }
}
