{
  "name": "bun-project",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "db:push": "bunx drizzle-kit push",
    "seed": "bun src/seed.ts",
    "db:studio": "bunx drizzle-kit studio --verbose",
    "lint": "bunx --bun eslint .",
    "format": "FORCE_COLOR=1 bunx --bun prettier . --write",
    "ts": "bunx --bun tsc",
    "gen": "bunx --bun tsr generate",
    "watch": "bunx --bun tsr watch",
    "dev": "bun run watch & bun --hot src/index.tsx",
    "dev:vite": "bunx --bun vite",
    "start": "NODE_ENV=production bun src/index.tsx",
    "build": "bun run gen && bun build --minify --sourcemap --env='BUN_PUBLIC_*' --production --target=bun ./src/index.tsx --outdir=dist",
    "start:js": "NODE_ENV=production bun --cwd=dist index.js",
    "build:exe": "bun run gen && bun build --compile --minify --sourcemap --env='BUN_PUBLIC_*' --bytecode --production --target=bun ./src/index.tsx --outfile bun-project",
    "clean": "rm -rf dist && rm -f bun-project && echo 'Done cleaning.'"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.2",
    "@tanstack/react-query-devtools": "^5.90.2",
    "@tanstack/react-router": "^1.132.47",
    "@tanstack/react-router-devtools": "^1.132.51",
    "@tanstack/router-cli": "^1.132.51",
    "drizzle-orm": "^0.44.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@socketsecurity/bun-security-scanner": "^1.1.0",
    "@tanstack/eslint-plugin-query": "^5.91.0",
    "@tanstack/eslint-plugin-router": "^1.132.31",
    "@types/bun": "^1.3.0",
    "@types/pg": "^8.15.5",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "drizzle-kit": "^0.31.5",
    "drizzle-seed": "^0.3.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.23",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "pg": "^8.16.3",
    "prettier": "3.6.2",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.1.9",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
